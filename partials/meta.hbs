<link rel="canonical" href="{{projectUrl}}" />
{{#if page.description}}
  <meta name="description" content="{{page.description}}">
{{/if}}

{{!-- Facebook OpenGraph tags --}}
<meta property="og:title" content="{{page.title}}"/>
{{#if page.description}}
  <meta property="og:description" content="{{page.description}}"/>
{{/if}}


<meta property='og:locale' content='en_US' />
<meta property='og:site_name' content='Austin American-Statesman' />
<meta property='fb:app_id' content='135078579956731' />
<meta property='og:type' content='article' />
<meta property='article:publisher' content='https://www.facebook.com/statesman' />
<meta property="og:image" content="{{projectUrl page.share_fb}}"/>
<meta property="og:url" content="{{projectUrl}}"/>

{{!-- Twitter card tags --}}
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@aasinteractive" />
<meta name="twitter:title" content="{{page.title}}" />
{{#if page.description}}
  <meta name="twitter:description" content="{{page.description}}" />
{{/if}}
<meta name="twitter:image" content="{{projectUrl page.share_tw}}" />
<meta name="twitter:url" content="{{projectUrl}}" />
